{
  "buildCommand": "vite build",
  "outputDirectory": "dist",
  "rewrites": [
    { 
      "source": "/robots.txt", 
      "destination": "/api/robots.txt" 
    },
    { 
      "source": "/sitemap.xml", 
      "destination": "https://backend-websitebandocongnghe-4rkw.onrender.com/sitemap.xml" 
    },
    { 
      "source": "/(.*)", 
      "destination": "/index.html" 
    }
  ],
  "headers": [
    {
      "source": "/robots.txt",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/plain"
        }
      ]
    },
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    }
  ]
}
